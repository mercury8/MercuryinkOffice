---
import {replaceUrls} from '../utils/replaceUrls';
import {joinClasses} from '../utils/joinClasses';
import { FontAwesomeIcon } from "@fortawesome/react-fontawesome";
import { faChevronDown } from "@fortawesome/free-solid-svg-icons";
type Props = {
    classes: string;
    styles: string;
    label: string;
    url: string;
};
const { classes, styles, label, url } = Astro.props;
const allClasses = joinClasses(classes, "group relative");
console.log(Astro.url);
const href = replaceUrls(url, Astro.url.host);
---

<li class={allClasses} style={styles}>
    <a href={href} class={classes} style={styles}>
        {label}
        <FontAwesomeIcon icon={faChevronDown} />
    </a>
    <ul class="hidden group-hover:block absolute top-full right-0 text-right whitespace-nowrap bg-red-500 py-2 [&_a]:px-4 [&_a]:block">
        <slot />
    </ul>
</li>
